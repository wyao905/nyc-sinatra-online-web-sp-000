<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<h3><%=@landmark.name%></h3>
<p><%=@landmark.year_completed%></p>
<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">
  Name <input type="text" id="name" name="landmark[name]">
  Year Completed <input type="text" id="year_completed" name="landmark[year_completed]">
  
  <br><input type="submit" id="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
